// Paste this into your settings.json file
// You can view it by pressing Ctrl + E, and then searching for "> Open Settings (JSON)"

{
    "window.restoreWindows": "none",

    "update.showReleaseNotes": true,

    "workbench.startupEditor": "welcomePage",
    // Make sure you have the Nord theme installed
    // Install it from https://marketplace.visualstudio.com/items?itemName=arcticicestudio.nord-visual-studio-code or via the Extensions tab in VSCode
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "vs-minimal",
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "workbench.navigationControl.enabled": false,
    "workbench.editor.restoreViewState": false,
    
    "chat.commandCenter.enabled": false,
    
    "diffEditor.hideUnchangedRegions.enabled": true,
    "git.autofetch": true,

    "files.hotExit": "off",
    
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "blink",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.fontFamily": "Cascadia Mono NF",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.4,
    "editor.fontLigatures": true,
    "editor.minimap.renderCharacters": false,
    
    "terminal.integrated.fontFamily": "Cascadia Mono NF",
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.stickyScroll.enabled": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.tabs.location": "left",
    "terminal.integrated.suggest.enabled": false,
    // "terminal.integrated.cursorStyle": "line",
    // "terminal.integrated.cursorStyleInactive": "line",
    
    // Windsurf/Codeium settings (if installed/enabled)
    "codeium.enableCodeLens": false,

    // Type checking for PyLance
    "python.analysis.typeCheckingMode": "off"

}
